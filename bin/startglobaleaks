def colorize(txt, col):
    """

    Colorized output.

    Plataform dependent: Linux

    """

    color_dict = {
            'GREY':   0, 'RED':   1, 'GREEN':   2,
            'YELLOW': 3, 'BLUE':  4, 'MAGENTA': 5,
            'CYAN':   6, 'WHITE': 7, 'BLACK':   8
            }
    return '\033[1;3%dm%s\033[0m' %(color_dict[col], txt)


print colorize("""
